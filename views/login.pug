doctype html
html(ng-app='Userapp')
	head
		meta(charset='utf-8')
		title Log In
		// Theme Styles
		link(href='public/stylesheets/ada.css', rel='stylesheet')
		link(href='public/stylesheets/bootstrap.min.css', rel='stylesheet')
		link(href='public/stylesheets/font-awesome.min.css', rel='stylesheet')
		style.
			body{
			background-color:#703030;
			height:100%;
			width:100%;
			}
			.login-page {
			width: 360px;
			padding: 8% 0 0;
			margin: auto;
			}
			.login-page i{
			color:#3B5998;
			}
			.login-page i:hover{
			color:#5e2828;
			}
			.active{
			color: #5e2828!important;
			}
			.form {
			position: relative;
			z-index: 1;
			background: #FFFFFF;
			max-width: 360px;
			margin: 0 auto 100px;
			padding: 45px;
			text-align: center;
			box-shadow: 0 0 20px 0 rgba(0, 0, 0, 0.2), 0 5px 5px 0 rgba(0, 0, 0, 0.24);
			}
			.form input {
			font-family: "Roboto", sans-serif;
			outline: 0;
			background: #f2f2f2;
			width: 100%;
			border: 0;
			margin: 0 0 15px;
			padding: 15px;
			box-sizing: border-box;
			font-size: 14px;
			}
			.form  {
			padding: 20px,0,20px,0;
			}
			.form button {
			font-family: "Roboto", sans-serif;
			text-transform: uppercase;
			outline: 0;
			background: #5e2828 ;
			width: 100%;
			border: 0;
			padding: 15px;
			color: #FFFFFF;
			font-size: 14px;
			-webkit-transition: all 0.3 ease;
			transition: all 0.3 ease;
			cursor: pointer;
			}
			.form button:hover,.form button:active,.form button:focus {
			background: #3B5998;
			}
			.form .message {
			margin: 15px 0 0;
			color: #b3b3b3;
			font-size: 12px;
			}
			.form .message a {
			color: #4CAF50;
			text-decoration: none;
			}
			.container {
			position: relative;
			z-index: 1;
			max-width: 300px;
			margin: 0 auto;
			}
			.container:before, .container:after {
			content: "";
			display: block;
			clear: both;
			}
			.container .info {
			margin: 50px auto;
			text-align: center;
			}
			.container .info h1 {
			margin: 0 0 15px;
			padding: 0;
			font-size: 36px;
			font-weight: 300;
			color: #1a1a1a;
			}
			.container .info span {
			color: #4d4d4d;
			font-size: 12px;
			}
			.container .info span a {
			color: #000000;
			text-decoration: none;
			}
			.container .info span .fa {
			color: #EF3B3A;
			}
			body {
			background-color:#703030;
			height:100%;
			width:100%;
			background: -webkit-linear-gradient(right, #703030, #a64747);
			background: -moz-linear-gradient(right, #703030, #a64747);
			background: -o-linear-gradient(right, #703030, #a64747);
			background: linear-gradient(to left, #703030, #a64747);
			font-family: "Roboto", sans-serif;
			-webkit-font-smoothing: antialiased;
			-moz-osx-font-smoothing: grayscale;
			}
	body
		script(src='public/javascripts/angular.min.js')
		script(src='public/javascripts/userlogin.js')
		.login-page.container(ng-controller='TabController')
			.form.row
				.center-block.col-md-12
					img(src='public/images/osimore.fw.png', alt='')
					h2 You must log In to View Content...
				.center-block.col-md-12
					span(ng-click='setTab(1)')
						i.fa.fa-facebook-square.fa-5x(ng-class='{ active: isSet(1) }')
					span(ng-click='setTab(2)')
						i.fa.fa-key.fa-5x(ng-class='{ active: isSet(2)}')
					span
				div
					form.register-form(ng-show='isSet(1)')
						p.message Sign In using your Facebook account
						button(type="submit")  Sign In
					form.login-form(ng-show='isSet(2)' ,action="/login", method="POST")
						p.message Already have an admin account?, Log In Here
						input(type='text',name="username", placeholder='username')
						input(type='password',name="password", placeholder='password')
						button(type="submit") login
